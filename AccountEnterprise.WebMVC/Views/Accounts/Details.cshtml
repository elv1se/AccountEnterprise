@model AccountEnterprise.Application.Dtos.AccountDto
@{
    Layout = "_Layout";
}

<h2>Детали счета</h2>

<div>
    <h4>Счет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Номер</dt>
        <dd class="col-sm-10">@Model.Number</dd>

        <dt class="col-sm-2">Название банка</dt>
        <dd class="col-sm-10">@Model.BankName</dd>

        <dt class="col-sm-2">Тип</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Отдел</dt>
        <dd class="col-sm-10">@Model.Department.Name</dd>
    </dl>
</div>
<br/>
<a class="btn btn-sm btn-primary" asp-controller="Accounts" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a class="btn btn-sm btn-primary" asp-controller="Accounts" asp-action="Index">Назад к списку</a>
