@model AccountEnterprise.Application.Dtos.AccountDto

@{
    ViewData["Title"] = "Удаление счета";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удаление счета</h2>

<h3>Вы уверены, что хотите удалить следующий счет?</h3>
<div>
    <h4>Счет</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номер счета
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt>
            Название банка
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BankName)
        </dd>
        <dt>
            Тип счета
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="btn btn-sm btn-primary" asp-controller="Accounts" asp-action="Index">Вернуться к списку</a>
    </form>
</div>