@model AccountEnterprise.Application.Dtos.AccountForUpdateDto

@{
    ViewData["Title"] = "Редактирование счета";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать счет</h2>

<form asp-action="Edit" asp-controller="Accounts">
    <h4>Счет</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="form-group">
        <label asp-for="Number" class="control-label">Номер счета</label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BankName" class="control-label">Название банка</label>
        <input asp-for="BankName" class="form-control" />
        <span asp-validation-for="BankName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label">Тип счета</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label">Отдел</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments"></select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-warning" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Вернуться</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}