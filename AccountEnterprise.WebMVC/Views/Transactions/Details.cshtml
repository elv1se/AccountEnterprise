@model AccountEnterprise.Application.Dtos.TransactionDto

@{
    Layout = "_Layout";
}

<h2>Детали транзакции</h2>

<div>
    <h4>Транзакция</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Тип</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Операция</dt>
        <dd class="col-sm-10">@Model.Operation?.Name</dd> 

        <dt class="col-sm-2">Департамент</dt>
        <dd class="col-sm-10">@Model.Department?.Name</dd> 
    </dl>
</div>
<br/>
<a class="btn btn-sm btn-primary" asp-controller="Transactions" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a class="btn btn-sm btn-primary" asp-controller="Transactions" asp-action="Index">Назад к списку</a>