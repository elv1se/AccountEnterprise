@model AccountEnterprise.Application.Dtos.TransactionForUpdateDto

@{
    ViewData["Title"] = "Редактирование транзакции";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать транзакцию</h2>

<form asp-action="Edit" asp-controller="Transactions">
    <h4>Транзакция</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label">Тип транзакции</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OperationId" class="control-label">Операция</label>
        <select asp-for="OperationId" class="form-control" asp-items="ViewBag.OperationId"></select>
        <span asp-validation-for="OperationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label">Отдел</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-warning" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Вернуться</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}