@model AccountEnterprise.Application.Dtos.EmployeeDto
@{
    Layout = "_Layout";
}

<h2>Детали сотрудника</h2>

<div>
    <h4>Сотрудник</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Фамилия</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Должность</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Департамент</dt>
        <dd class="col-sm-10">@Model.Department.Name</dd>
    </dl>
</div>
<br/>
<a class="btn btn-sm btn-primary" asp-controller="Employees" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a class="btn btn-sm btn-primary" asp-controller="Employees" asp-action="Index">Назад к списку</a>
