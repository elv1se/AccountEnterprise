@model IEnumerable<AccountEnterprise.Application.Dtos.EmployeeDto>
@{
    Layout = "_Layout";
}

<h2>Сотрудники</h2>

<a asp-controller="Employees" asp-action="Create">Создать нового сотрудника</a>
<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Должность</th>
            <th>Департамент</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Surname</td>
                <td>@employee.Name</td>
                <td>@employee.Midname</td>
                <td>@employee.Position</td>
                <td>@employee.Department?.Name</td> 
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Детали</a> |
                    <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

