@model AccountEnterprise.Application.Dtos.EmployeeForUpdateDto
@{
    ViewBag.Title = "Редактирование сотрудника";
}

<h2>Редактировать сотрудника</h2>

<form asp-action="Edit" asp-controller="Employees">
    <h4>Сотрудник</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="form-group">
        <label asp-for="Surname" class="control-label col-md-2">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Midname" class="control-label col-md-2">Отчество</label>
        <input type="text" asp-for="Midname" class="form-control" />
        <span asp-validation-for="Midname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label col-md-2">Должность</label>
        <input type="text" asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label col-md-2">Отдел</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-warning" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Вернуться</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}