@model AccountEnterprise.Application.Dtos.OperationTypeDto
@{
    Layout = "_Layout";
}

<h2>Детали типа операции</h2>

<div>
    <h4>Тип операции</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.OperationTypeId</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
</div>
<br/>
<a class="btn btn-sm btn-primary" asp-controller="OperationTypes" asp-action="Edit" asp-route-id="@Model.OperationTypeId">Редактировать</a> |
<a class="btn btn-sm btn-primary" asp-controller="OperationTypes" asp-action="Index">Назад к списку</a>
