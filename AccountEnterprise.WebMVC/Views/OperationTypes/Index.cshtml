@model IEnumerable<AccountEnterprise.Application.Dtos.OperationTypeDto>
@{
    Layout = "_Layout";
}

<h2>Список типов операций</h2>
<a asp-controller="OperationTypes" asp-action="Create">Создать новый тип операции</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in Model)
        {
            <tr>
                <td>@type.Name</td>
                <td>
                    <a asp-controller="OperationTypes" asp-action="Details" asp-route-id="@type.Id">Детали</a> |
                    <a asp-controller="OperationTypes" asp-action="Delete" asp-route-id="@type.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

