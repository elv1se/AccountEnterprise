@model AccountEnterprise.Application.Dtos.OperationDto

@{
    Layout = "_Layout";
}

<h2>Детали операции</h2>

<div>
    <h4>Операция</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.OperationId</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Сумма</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Дата</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-2">Категория</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd> 

        <dt class="col-sm-2">Тип операции</dt>
        <dd class="col-sm-10">@Model.OperationType?.Name</dd>
    </dl>
</div>
<br />
<a class="btn btn-sm btn-primary" asp-controller="Operations" asp-action="Edit" asp-route-id="@Model.OperationId">Редактировать</a> |
<a class="btn btn-sm btn-primary" asp-controller="Operations" asp-action="Index">Назад к списку</a>