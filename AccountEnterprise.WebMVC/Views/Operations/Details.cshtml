@model AccountEnterprise.Application.Dtos.OperationDto

@{
    Layout = "_Layout";
}

<h2>Детали операции</h2>

<div>
    <h4>Операция</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Сумма</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Дата</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Категория</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd> <!-- Отображаем имя категории -->

        <dt class="col-sm-2">Тип операции</dt>
        <dd class="col-sm-10">@Model.OperationType?.Name</dd> <!-- Отображаем имя типа операции -->
    </dl>
</div>

<a asp-controller="Operations" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
<a asp-controller="Operations" asp-action="Index">Назад к списку</a>